# along with this program; if not, write to the Free Software
# Foundation, Inc., 59 Temple Place - Suite 330, Boston, MA 02111-1307, USA.

__author__ = "Petter Reinholdtsen <pere@hungry.com>"

import optparse
import io
import sys

sys.stdout = open(sys.stdout.fileno(), mode='w', encoding='utf8', buffering=1)

def mdsplit(input, startnum=None):
    print(input)
    title='Unknown'
    lasttitle = None
    outfilename = "00-Unknown.md"
    outfile = None
    with io.open(input, 'r', encoding="utf-8") as f:
        for l in f.readlines():
            if 0 == l.find('# '):
                title=l.partition(' ')[2].strip().replace(' ', '_').replace('â€“', '-')
                outfilename = "%02d-%s.md" % (startnum, title.lower())
                print(outfilename)
            if title != lasttitle:
                startnum = startnum + 1
                if outfile:
                    outfile.close()
                outfile = io.open(outfilename, 'wt', encoding="utf-8")
                lasttitle = title
            outfile.write(l)
    if outfile:
        outfile.close()

def main():
    parser = optparse.OptionParser()
    parser.add_option('-s',
                      action="store",
                      dest="startnum",
                      type="int",
                      default=0)

    (opts, args) = parser.parse_args()
    mdsplit(args[0], startnum=opts.startnum)

if __name__ == '__main__':
    main()
